@model ObqwaViewModel

@{ ViewData["Title"] = "Home Page"; }


@if (!Model.obqwi.Any())
{
<div class="jumbotron">
    <h1 class="display-4">Добре дошли в МоитеГуми</h1>
    <p class="lead">Няма обяви в момента</p>
    <hr class="my-4">
    <p class="lead">
        <a asp-controller="Обява" asp-action="Create" class="btn btn-primary btn-lg" role="button">Добави Обява</a>
    </p>
</div>
 } 

<h3>Последни три обяви</h3>
<div class="mb-5"></div>
<div id="carouselExampleControls" class="carousel slide col-md-6" data-ride="carousel">
    <div class="carousel-inner ">
        @for (int i = 0; i < Model.obqwi.Count; i++)
        {
            var obqwa = Model.obqwi[i];

<div class="carousel-item @(i == 0 ? "active" : string.Empty)">
    <img src="@obqwa.ImageUrl" class="d-block w-100" alt="@obqwa.Marka @obqwa.Size ">
    <div class="carousel-caption d-none d-md-block">
        <h5><a class="btn btn-info" asp-controller="Обява" asp-action="Details" asp-route-id="@obqwa.Id" asp-route-information="@obqwa.GetInformation()"> @obqwa.Marka @obqwa.Size </a></h5>
    </div>
</div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>



<div class="jumbotron">
    <div class="row">
        <div class="col-md-6 text-center">
            @Model.CountAnnouncement Обяви
        </div>
        <div class="col-md-6 text-center">
            @Model.CountUsers Брой потребители
        </div>

    </div>
</div>








