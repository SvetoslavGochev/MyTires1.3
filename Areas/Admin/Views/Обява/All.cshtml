@model IEnumerable<ObqwaServicesModel>

@{
    ViewData["Title"] = "Administration";
}


<h1>Всички обяви</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Marka</th>
            <th scope="col">Размер</th>
            <th scope="col">Година</th>
            <th scope="col">Категория</th>
            <th scope="col">Одобрение</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
     @foreach (var obqwa in Model)
     {
        <tr>
            <td scope="col">@obqwa.Id</td>
            <td scope="col">@obqwa.Marka</td>
            <td scope="col">@obqwa.Size</td>
            <td scope="col">@obqwa.Year</td>
            <td scope="col">@obqwa.CategoryName</td>
            <td scope="col">@(obqwa.IsPublic ? "да" : "Не" )</td>
            <td scope="col">
                <a asp-area="" asp-controller="Обява" asp-action="Details" asp-route-id="@obqwa.Id" asp-route-information="@obqwa.GetInformation()" class="btn btn-primary ml-5">Информация</a>
                <a asp-area="" asp-controller="Обява" asp-action="Edit" asp-route-id="@obqwa.Id" class="btn btn-warning ml-5">Редактирай</a>
                <a asp-area="Admin" asp-controller="Обява" asp-action="ChangeVisibility" asp-route-id="@obqwa.Id" class="btn btn-info ml-5">@(obqwa.IsPublic ? "Скрий" : "Покажи")(</a>
                <a asp-area="" asp-controller="Обява" asp-action="Delete" asp-route-id="@obqwa.Id" class="btn btn-danger ml-5">Триене</a>
            </td>
        </tr>
     }
    </tbody>
</table>